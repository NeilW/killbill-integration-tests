            </price>
          </recurringPrice>
        </recurring>
        <usages>
          <usage name="vm-monthly-cpu-usage" billingMode="IN_ARREAR" usageType="CONSUMABLE">
            <billingPeriod>MONTHLY</billingPeriod>
            <tiers>
              <tier>
                <blocks>
                  <tieredBlock>
                    <unit>cpu-hour</unit>
                    <size>1</size>
                    <prices>
                      <price>
                        <currency>USD</currency>
                        <value>0.05</value>
                      </price>
                      <price>
                        <currency>GBP</currency>
                        <value>0.04</value>
                      </price>
                      <price>
                        <currency>EUR</currency>
                        <value>0.05</value>
                      </price>
                      <price>
                        <currency>JPY</currency>
                        <value>0.005</value>
                      </price>
                      <price>
                        <currency>BTC</currency>
                        <value>0.0025</value>
                      </price>
                    </prices>
                    <max>100000</max>
                  </tieredBlock>
                </blocks>
              </tier>
            </tiers>
          </usage>
        </usages>
      </finalPhase>
    </plan>
  </plans>
  <priceLists>
    <defaultPriceList name="DEFAULT">
      <plans>
        <plan>metal-annual</plan>
        <plan>metal-monthly</plan>
        <plan>vm-monthly</plan>
      </plans>
    </defaultPriceList>
    <childPriceList name="TRIAL">
      <plans>
        <plan>metal-monthly-trial</plan>
      </plans>
    </childPriceList>
  </priceLists>
</catalog>
