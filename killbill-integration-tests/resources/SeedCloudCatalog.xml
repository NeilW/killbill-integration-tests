<catalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="CatalogSchema.xsd ">

  <effectiveDate>2015-01-01T00:00:00+00:00</effectiveDate>
  <catalogName>SeedCloudCatalog</catalogName>

  <recurringBillingMode>IN_ADVANCE</recurringBillingMode>

  <currencies>
    <currency>USD</currency>
    <currency>GBP</currency>
    <currency>EUR</currency>
    <currency>JPY</currency>
    <currency>BTC</currency>
  </currencies>

  <units>
    <unit name="cpu-hour"/>
    <unit name="bandwidth-mb"/>
  </units>

  <products>
    <product name="metal">
      <category>BASE</category>
      <included>
        <addonProduct>backup-daily</addonProduct>
      </included>
    </product>
    <product name="vm">
      <category>BASE</category>
      <available>
        <addonProduct>backup-daily</addonProduct>
      </available>
    </product>
    <product name="backup-daily">
      <category>ADD_ON</category>
    </product>
  </products>

  <rules>
    <changePolicy>
      <changePolicyCase>
        <policy>IMMEDIATE</policy>
      </changePolicyCase>
    </changePolicy>
    <changeAlignment>
      <changeAlignmentCase>
        <alignment>START_OF_BUNDLE</alignment>
      </changeAlignmentCase>
    </changeAlignment>
    <cancelPolicy>
      <cancelPolicyCase>
        <policy>IMMEDIATE</policy>
      </cancelPolicyCase>
    </cancelPolicy>
    <createAlignment>
      <createAlignmentCase>
        <product>backup-daily</product>
        <alignment>START_OF_SUBSCRIPTION</alignment>
      </createAlignmentCase>
      <createAlignmentCase>
        <alignment>START_OF_BUNDLE</alignment>
      </createAlignmentCase>
    </createAlignment>
    <billingAlignment>
      <billingAlignmentCase>
        <billingPeriod>ANNUAL</billingPeriod>
        <alignment>SUBSCRIPTION</alignment>
      </billingAlignmentCase>
      <billingAlignmentCase>
        <alignment>ACCOUNT</alignment>
      </billingAlignmentCase>
    </billingAlignment>
    <priceList>
      <priceListCase>
        <toPriceList>DEFAULT</toPriceList>
      </priceListCase>
    </priceList>
  </rules>

  <plans>
    <plan name="metal-annual">
      <product>metal</product>
      <finalPhase type="EVERGREEN">
        <duration>
          <unit>UNLIMITED</unit>
        </duration>
        <recurring>
          <billingPeriod>ANNUAL</billingPeriod>
          <recurringPrice>
            <price>
              <currency>USD</currency>
              <value>1000.00</value>
            </price>
            <price>
              <currency>GBP</currency>
              <value>800.00</value>
            </price>
            <price>
              <currency>EUR</currency>
              <value>900.00</value>
            </price>
            <price>
              <currency>JPY</currency>
              <value>100.00</value>
            </price>
            <price>
              <currency>BTC</currency>
              <value>50.00</value>
            </price>
          </recurringPrice>
        </recurring>
        <usages>
          <usage name="metal-annual-cpu-usage" billingMode="IN_ARREAR" usageType="CONSUMABLE">
            <billingPeriod>MONTHLY</billingPeriod>
            <tiers>
              <tier>
                <blocks>
                  <tieredBlock>
                    <unit>cpu-hour</unit>
                    <size>1</size>
                    <prices>
                      <price>
                        <currency>USD</currency>
                        <value>0.05</value>
                      </price>
                      <price>
                        <currency>GBP</currency>
                        <value>0.04</value>
                      </price>
                      <price>
                        <currency>EUR</currency>
                        <value>0.09</value>
                      </price>
                      <price>
                        <currency>JPY</currency>
                        <value>0.005</value>
                      </price>
                      <price>
                        <currency>BTC</currency>
                        <value>0.0025</value>
                      </price>
                    </prices>
                    <max>100000</max>
                  </tieredBlock>
                </blocks>
              </tier>
            </tiers>
          </usage>
        </usages>
      </finalPhase>
    </plan>
    <plan name="metal-monthly">
      <product>metal</product>
      <finalPhase type="EVERGREEN">
        <duration>
          <unit>UNLIMITED</unit>
        </duration>
        <recurring>
          <billingPeriod>MONTHLY</billingPeriod>
          <recurringPrice>
            <price>
              <currency>USD</currency>
              <value>100.00</value>
            </price>
            <price>
              <currency>GBP</currency>
              <value>80.00</value>
            </price>
            <price>
              <currency>EUR</currency>
              <value>90.00</value>
            </price>
            <price>
